<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="All_Messenger.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:All_Messenger"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="All Messenger">

    <Grid>
        <NavigationView x:Name="NavView"
                        PaneDisplayMode="Left"
                        IsPaneOpen="False"
                        OpenPaneLength="240"
                        CompactPaneLength="64"
                        IsBackButtonVisible="Collapsed"
                        SelectionChanged="NavView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Messenger" Icon="Home" Tag="MessengerPage"/>
                <NavigationViewItem Content="Zalo" Icon="Setting" Tag="ZaloPage"/>
                <NavigationViewItem Content="Teams" Icon="Setting" Tag="TeamsPage"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
